<header class="header-text">
    <h1>{{shop.name}}</h1>
    <ul>
        {% for link in linklists.main-menu.links -%}
            <li>{{link.title | link_to: link.url}}</li>
        {%- endfor %}
    </ul>

    {% comment %} {% if settings.show_search %} {% endcomment %}
    {% if section.settings.show_search %}
        <form action="/search">
            <input type="search" name="q" />
            <button type="submit">Search</button>
        </form>
    {% endif %}
</header>

<style>
    .header-text {
        background: {{ section.settings.bg }}
    }
</style>

{% stylesheet %}
    .header-text {
        text-align: center;
        padding: 20px;
    }
{% endstylesheet %}

{% javascript %}
    console.log('Hey, Section for Javascript.')
{% endjavascript %}

{% schema %}
    {
        "name": "Header",
        "settings": [
            {
                "type": "checkbox",
                "id": "show_search",
                "label": "Show search form?"
            },
            {
                "type": "color",
                "id": "bg",
                "label": "Background color"
            }
        ]
    }
{% endschema %}