{% assign product = all_products[section.settings.product] %}

<div>
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ product.title }}</p>
    <a href="{{ product.url }}">View Product</a>
</div>

{% schema %}
{
    "name": "Featured Products",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading Text"
        },
        {
            "type": "product",
            "id": "product",
            "label": "Product"
        }
    ],
    "presets": [
        {
            "name": "Featured Products",
            "settings": {
                "heading": "Check out this product"
            }
        }
    ]
}
{% endschema %}

